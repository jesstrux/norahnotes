<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="NoteTakerTheme" parent="Theme.AppCompat.Light">
        <!--<item name="android:fontFamily">@font/playfair</item>-->

        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:statusBarColor">@android:color/white</item>-->
        <item name="android:statusBarColor">#DDDDDD</item>
        <item name="android:textColorPrimary">@android:color/black</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:actionMenuTextAppearance">@style/menu_text_style</item>
    </style>

    <style name="NoteTakerTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoteTakerTheme.NoActionBar.Splash">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="NoteTakerTheme.NoActionBar.Detail">
        <item name="android:actionMenuTextAppearance">@style/menu_text_style</item>
    </style>

    <style name="NoteTakerTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->

        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoteTakerTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="nav_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
