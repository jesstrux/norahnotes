<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:ignore="MergeRootFrame"
    tools:context=".NotificationListFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/NoteTakerTheme.AppBarOverlay"
        android:background="#fff"
        android:stateListAnimator="@null" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="All Alerts"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/NoteTakerTheme.PopupOverlay"
            android:background="@drawable/border_bottom"
            app:layout_scrollFlags="snap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:paddingRight="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Alerts"
                    android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"/>

                <ImageButton
                    android:id="@+id/toggleDozeModeBtn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_notify_on"
                    android:minHeight="0dp"
                    android:layout_marginRight="-12dp"/>

                <Button
                    android:id="@+id/clearNotificationsBtn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border_black"
                    android:drawableLeft="@drawable/ic_close_small"
                    android:drawablePadding="5dp"
                    android:minHeight="0dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="8dp"
                    android:text="Clear Alerts"
                    android:textColor="#333" />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/note_list"
            android:name="akil.co.tz.notetaker.NoteListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:clipToPadding="false"
            tools:context="akil.co.tz.notetaker.NoteListActivity"
            tools:listitem="@layout/note_list_content"
            android:background="#fff"/>

        <TextView
            android:id="@+id/no_notifications"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:background="#fff"
            android:textColor="#bbb"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="80dp"
            android:text="You don't have any alerts."/>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>