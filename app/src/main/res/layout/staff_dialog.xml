<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".StaffDialog"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:paddingTop="28dp"
            android:paddingBottom="8dp"
            android:textColor="#555"
            android:gravity="center_horizontal"
            android:text="Juma Jabu"
            android:textSize="20dp"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="#333"
            app:tabIndicatorColor="#333"
            android:background="@drawable/border_bottom"
            android:layout_marginBottom="20dp">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DETAILS"/>

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MANAGE"/>

        </android.support.design.widget.TabLayout>

        <akil.co.tz.notetaker.WrapContentViewPager
            android:id="@+id/sections_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/cancel_btn"
                android:text="CANCEL"
                android:textColor="#000"
                android:textSize="16dp"
                android:padding="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <View
                android:visibility="gone"
                android:id="@+id/btn_separator"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#eee"/>

            <TextView
                android:id="@+id/submit_btn"
                android:text="SAVE"
                android:visibility="gone"
                android:textColor="#000"
                android:textSize="16dp"
                android:padding="20dp"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/staff_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#99F0F0F0"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/save_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVING STAFF...."/>

    </LinearLayout>
</FrameLayout>